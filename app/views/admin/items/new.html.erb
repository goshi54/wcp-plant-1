<div class="container">

  <div class="row">
    <div class="h5 my-3 text-center theme col-2 offset-md-2">商品新規登録</div>

    <div class="col-12 offset-md-4 mt-3">
      <%= form_with model: [:admin,@item],local:true do |f| %>
      <table class="table table-borderless">
        <tr><td style="width: 15%">商品画像</td>
          <td style="width: 75%"><%= f.attachment_field :image, class:"form-control.file" %></td></tr>
        <tr><td>商品名</td>
          <td><%= f.text_field :item_name, placeholder: "商品名" %></td></tr>
        <tr><td>商品説明</td>
          <td><%= f.text_area :explanation, placeholder: "説明文" %></td></tr>
        <tr><td>税抜価格</td>
          <td><%= f.number_field :price, placeholder: "1000" %></td></tr>
        <tr><td>販売ステータス</td>
          <td><%= f.radio_button :is_active, "true" %>販売中　<%= f.radio_button :is_active, "false" %>販売停止中</td></tr>
      </table>
        <%= f.submit '新規登録', class:"btn btn-lg btn-success offset-md-3"%>
<% end %>
</div>