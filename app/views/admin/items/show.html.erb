<div class="container">

  <div class="row">
    <div class="my-3 h5 text-center theme col-2 offset-md-1">商品詳細</div>
  </div>

  <div class="row">
    <div class="mt-5 col-4 text-center">
      <%= attachment_image_tag @item, :image, :fill, 200, 200, fallback:"no_image.jpg" %>
    </div>

    <table class="table table-borderless mt-5 ml-3 col-7">
      <tr><td style="width: 5%">商品名</td>
        <td style="width: 15%"><%= @item.item_name %></td></tr>
      <tr><td>商品説明</td>
        <td><%= @item.explanation %></td></tr>
      <tr><td>税込価格<br>(税抜価格)</td>
        <td><%= (@item.price * 1.1) %> (<%= @item.price %>)</td></tr>
      <tr><td>販売ステータス</td>
        <td style="font-size: 20px; font-weight: bold" class=<%= @item.is_active ? "sale" : "sold" %>>
          <%= @item.is_active ? "販売中" : "販売停止中" %></td></tr>
    </table>
      <%= link_to "編集する", edit_admin_item_path(@item), class:"btn btn-lg btn-success mt-2 offset-md-6" %>

  </div>
</div>