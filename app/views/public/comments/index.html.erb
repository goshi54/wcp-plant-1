<table>
  <% @item.comments.each do |comment| %>
    <% comment_customer = comment.customer %>
    <tr>
    	<td>
        <%= comment.customer.name %>
        <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>

      </td>
    	<td><%= comment.comment %></td>
    	<% if current_customer == comment_customer %>
      	<td><%= link_to 'Destroy', comment_path(comment.id), class: 'btn-sm btn-danger', method: :delete %></td>
    	<% end %>
    </tr>
  <% end %>
</table>
 <%= link_to "コメント投稿", new_comment_path(item_id: @item.id), class:"btn btn-sm btn-primary" %>