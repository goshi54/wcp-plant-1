<div class="container">

  <div class="row">
    <div class="my-3 h5 text-center theme col-4 offset-md-1"><%= @customer.name %> さんの会員詳細</div>
  </div>

  <div class="row">
    <table class="table table-borderless mt-5 ml-3 col-5">
      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= @customer.name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= @customer.name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <td class=<%= @customer.is_deleted ? "resign" : "valid" %>>
          <strong><%= @customer.is_deleted ? "退会" : "有効" %></strong>
        </td>
      </tr>
    </table>
  </div>

    <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-sm btn-success mt-2 offset-md-2" %>
    <%= link_to "注文履歴一覧を見る", admin_root_path(id: @customer.id), class: "btn btn-sm btn-primary mt-2 offset-md-2" %>

</div>