<div class="container offset-1 mt-3 mb-3">

  <div class="row  mt-5 mb-5">
    <div class="offset-1"></div>
    <h2>会員情報編集</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "customer/shared/error_messages", resource: resource %>

    <div class="row">
      <div class="field form-group col-12">
        <%= f.label :氏名, class:"control-label col-2" %>
        <%= f.text_field :last_name, autofocus: true, class:"col-2 offset-1" %>
        <%= f.text_field :first_name, autofocus: true, class:"col-2 offset-1" %>
      </div>

      <div class="field form-group col-12">
        <%= f.label :フリガナ, class:"control-label col-2" %>
        <%= f.text_field :last_name_kana, autofocus: true, class:"col-2 offset-1" %>
        <%= f.text_field :first_name_kana, autofocus: true, class:"col-2 offset-1" %>
      </div>

      <div class="field form-group col-12">
        <%= f.label :郵便番号（ハイフンなし）, class:"control-label col-3" %>
        <%= f.text_field :postal_code, autofocus: true, class:"col-2" %>
      </div>

      <div class="field form-group col-12 ">
        <%= f.label :住所, class:"control-label col-3" %>
        <%= f.text_field :address, autofocus: true, class:"col-6" %>
      </div>

      <div class="field form-group col-12">
        <%= f.label :電話番号（ハイフンなし）, class:"control-label col-3" %>
        <%= f.text_field :phone_number, autofocus: true, class:"col-2" %>
      </div>

      <div class="field form-group col-12">
        <%= f.label :メールアドレス, class:"control-label col-3" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-2" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field form-group col-12">
        <%= f.label :新パスワード（変更時のみ）, class:"control-label col-3" %>
        <%= f.password_field :password, autocomplete: "new-password", class:"col-2" %>
        <% if @minimum_password_length %>
          <em>（<%= @minimum_password_length %>文字以上にしてください）</em>
        <% end %>
      </div>

      <div class="field form-group col-12">
        <%= f.label :新パスワード（確認）, class:"control-label col-3" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-2" %>
      </div>

      <div class="field form-group col-12">
        <%= f.label :現在のパスワード, class:"control-label col-3" %>
        <%= f.password_field :current_password, autocomplete: "current-password", class:"col-2" %>
      </div>

      <div class="actions form-group col-12">
        <%= f.submit "編集内容を保存", class:"btn btn-sm btn-success col-2 offset-3" %>
        <%= link_to "退会する", customers_leave_path, class:"btn btn-sm btn-danger col-1 offset-2" %>
      </div>

    </div>
  <% end %>

</div>